\ProvidesPackage{beamerthemePurdue}

\selectcolormodel{rgb}
\mode<presentation>

% custom colors
% http://www.colorsontheweb.com/colorwizard.asp#wizard, used start set: #535967
% 535967 (mittel)
% 0e0f12 (schwarz)
% a0a5b2 (hell)
% 5d5d5d (gray)
% cd995d (orange, hell)
% F79C32 (orange, mittel)
% FF7e00 (orange, stark)
% FFBD00 (orange, gelblich)

\definecolor{i6colorscheme1}{HTML}{000000}  %  e.g. for headline background
\definecolor{i6colorscheme2}{HTML}{FFFFFF}  %  e.g. title in headline
\definecolor{i6colorscheme3}{HTML}{FFFFFF}  %  e.g. for poster background
\definecolor{i6colorscheme4}{HTML}{F0F0F0}  %  e.g. for block background
\definecolor{i6colorscheme5}{HTML}{B1946C}  %  e.g. title in headline, separation lines
%% old gold: CFB53B E0D5C5
\definecolor{i6colorscheme6}{HTML}{D5973D}  %  e.g. for alert

% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=i6colorscheme1}
\setbeamercolor{title in headline}{fg=i6colorscheme5}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=i6colorscheme3}
\setbeamercolor{logo in headline}{fg=black,bg=i6colorscheme3}

% lines
%\setbeamercolor{upper separation line head}{fg=ta2orange}
\setbeamercolor{separation line}{bg=i6colorscheme5}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=i6colorscheme1}
\setbeamerfont{footline}{fg=white,size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=i6colorscheme3}

% block environment
\setbeamercolor*{block body}{bg=i6colorscheme4,fg=black}
\setbeamercolor*{block title}{fg=i6colorscheme5,bg=i6colorscheme1}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}
\setbeamerfont{example title}{size=\large,series=\bf,bg=i6colorscheme1,fg=white}

\setbeamercolor*{example body}{fg=white,bg=i6colorscheme4}
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}

%  \setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
%  \setbeamercolor{author in head/foot}{fg=tabutter, bg=black}
%  \setbeamercolor{title in head/foot}{bg=tabutter, fg=black}

\setbeamercolor{alerted text}{fg=i6colorscheme6}

%\setbeamercolor{example text}{fg=taorange}
%\setbeamercolor{structure}{fg=ta3skyblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3.5ex,dp=0.5ex,center,rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex,sep=2ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
    \vskip-0.2ex
  \end{beamercolorbox}
}

\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.15\paperwidth}
	\vskip1ex
	\raggedleft
	\includegraphics[width=.8\linewidth,keepaspectratio]{purdue_signature.png}
	\vskip1ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.85\paperwidth}
%	\hskip2ex
	\vskip4ex
%	\raggedright
	%% \centering
	%% \usebeamercolor{title in headline}{\color{fg}\textbf{\Large{\inserttitle}\\[1.5ex]}}
	%% \usebeamercolor{author in headline}{\color{fg}{\Large{\insertauthor}\\[1.5ex]}}
	%% \usebeamercolor{institute in headline}{\color{fg}{\Large{\insertinstitute}\\[1ex]\ }}
	\usebeamercolor{title in headline}{\color{fg}\textbf{\Large{\inserttitle}\\[1.5ex]}}
	\usebeamercolor{author in headline}{\color{fg}{\Large{\insertauthor}\\[0.5ex]}}
	\usebeamercolor{institute in headline}{\color{fg}{\Large{\insertinstitute}\\[1ex]\ }}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}

  \leavevmode%
  \begin{beamercolorbox}[]{footline}%
    \begin{columns}[T]
      \begin{column}{.05\paperwidth}
	\hfill
      \end{column}
      \begin{column}{.20\paperwidth}
	\vskip2ex
	\scriptsize{Fill in attribution}
      \end{column}
      \begin{column}{.12\paperwidth}
	\hfill
      \end{column}
      \begin{column}{.60\paperwidth}
	\vskip2.5ex
	\vspace*{\fill}
	\url{Your url}\hfill
	\texttt{\{your,names\}@here}
	\vspace*{\fill}
      \end{column}
      \begin{column}{.2\paperwidth}
	\hfill
      \end{column}
    \end{columns}
    \vskip1ex
  \end{beamercolorbox}
  \vskip0pt%
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

\mode<all>

